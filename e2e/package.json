{
  "name": "sblite-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for sblite - Supabase compatibility testing",
  "type": "module",
  "scripts": {
    "test": "vitest run --no-file-parallelism --max-workers=1",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:rest": "vitest run --testPathPattern=rest/",
    "test:auth": "vitest run --testPathPattern=auth/",
    "test:filters": "vitest run --testPathPattern=filters/",
    "test:modifiers": "vitest run --testPathPattern=modifiers/",
    "test:storage": "vitest run tests/storage/ --no-file-parallelism --max-workers=1",
    "test:email": "vitest run tests/email/",
    "test:email:smtp": "SBLITE_TEST_SMTP=true vitest run tests/email/smtp",
    "test:realtime": "vitest run tests/realtime/",
    "test:dashboard": "playwright test",
    "test:dashboard:ui": "playwright test --ui",
    "test:dashboard:headed": "playwright test --headed",
    "setup": "tsx scripts/setup-test-db.ts",
    "server:start": "cd .. && ./sblite serve &",
    "server:stop": "pkill -f 'sblite serve' || true"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@supabase/supabase-js": "^2.45.0",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "jsonwebtoken": "^9.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "ws": "^8.16.0"
  }
}
